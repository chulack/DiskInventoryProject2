<h1>@ViewBag.title</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Media ID</th>
            <th>Media Name</th>
            <th>Release Date</th>

            <th>Genre</th>
            <th>Status</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var media in Model)
        {
            <tr>
                <td>@media.MediaId</td>
                <td>@media.MediaName</td>
                <td>@media.ReleseDate</td>

                <td>@media.GenreId</td>
                <td>@media.StatusId</td>
                <td>@media.MediaTypeId</td>
            </tr>
        }
    </tbody>
</table>