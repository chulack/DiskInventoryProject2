<h1>@ViewBag.title</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Borrower ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Borrower Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrower in Model)
        {
            <tr>
                <td>@borrower.BorrowerId</td>
                <td>@borrower.Lname</td>
                <td>@borrower.Fname</td>
                <td>@borrower.BorrowerPhoneNum</td>
            </tr>
        }
    </tbody>
</table>